<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="EcoreMetamodelExtraction"
            id="EME.commands.category">
      </category>
      <command
            name="Extract From..."
            categoryId="EME.commands.category"
            id="EME.commands.extractWorkspaceCommand">
      </command>
      <command
            categoryId="EME.commands.category"
            id="EME.commands.extractProjectCommand"
            name="Extract Ecore Metamodel">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="EME.commands.extractWorkspaceCommand"
            class="eme.handlers.WorkspaceHandler">
      </handler>
      <handler
            class="eme.handlers.ProjectHandler"
            commandId="EME.commands.extractProjectCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="EME.toolbars.emeToolbar">
            <command
                  commandId="EME.commands.extractWorkspaceCommand"
                  icon="src/main/resources/eme.gif"
                  tooltip="EcoreMetamodelExtraction (Extract &amp; Save from...)"
                  id="EME.toolbars.chooseProjectCommand">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               label="Extract Ecore Metamodel...">
            <command
                  commandId="EME.commands.extractProjectCommand"
                  id="EME.menus.extractProjectCommand"
                  label="...as new Project"
                  mnemonic="S"
                  tooltip="Extract Ecore metamodel from the selected Project.">
               <visibleWhen>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   
</plugin>
