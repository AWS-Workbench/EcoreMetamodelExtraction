<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="EcoreMetamodelExtraction.commands.category">
      </category>
      <command
            name="Choose project..."
            categoryId="EcoreMetamodelExtraction.commands.category"
            id="EcoreMetamodelExtraction.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="EcoreMetamodelExtraction.commands.sampleCommand"
            class="eme.handlers.MainHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="EcoreMetamodelExtraction.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="EcoreMetamodelExtraction"
               mnemonic="M"
               id="EcoreMetamodelExtraction.menus.sampleMenu">
            <command
                  commandId="EcoreMetamodelExtraction.commands.sampleCommand"
                  mnemonic="S"
                  id="EcoreMetamodelExtraction.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="EcoreMetamodelExtraction.toolbars.sampleToolbar">
            <command
                  commandId="EcoreMetamodelExtraction.commands.sampleCommand"
                  icon="src/main/resources/sample.gif"
                  tooltip="EcoreMetamodelExtraction"
                  id="EcoreMetamodelExtraction.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
