<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="EME Category"
            id="EcoreMetamodelExtraction.commands.category">
      </category>
      <command
            name="Choose project..."
            categoryId="EcoreMetamodelExtraction.commands.category"
            id="EcoreMetamodelExtraction.commands.chooseProjectCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="EcoreMetamodelExtraction.commands.chooseProjectCommand"
            class="eme.handlers.MainHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="EcoreMetamodelExtraction.commands.chooseProjectCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+1"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="EME"
               mnemonic="M"
               id="EcoreMetamodelExtraction.menus.sampleMenu">
            <command
                  commandId="EcoreMetamodelExtraction.commands.chooseProjectCommand"
                  mnemonic="S"
                  id="EcoreMetamodelExtraction.menus.chooseProjectCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="EcoreMetamodelExtraction.toolbars.sampleToolbar">
            <command
                  commandId="EcoreMetamodelExtraction.commands.chooseProjectCommand"
                  icon="src/main/resources/eme.gif"
                  tooltip="EcoreMetamodelExtraction (choose Project)"
                  id="EcoreMetamodelExtraction.toolbars.chooseProjectCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
</plugin>
